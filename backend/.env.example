# ==============================================
# Django Core Settings
# ==============================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
DJANGO_ENV=production
ALLOWED_HOSTS=.onrender.com,.railway.app,localhost,127.0.0.1

# ==============================================
# Database Configuration
# ==============================================
# For Production: Use DATABASE_URL (automatically provided by hosting platform)
# For Local Development: Leave empty to use SQLite (db.sqlite3)
DATABASE_URL=

# Railway Database URL (for migration scripts only - NEVER hardcode!)
RAILWAY_DATABASE_URL=

# ==============================================
# CORS Settings
# ==============================================
# Comma-separated list of allowed frontend origins
CORS_ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,http://localhost:5173,http://localhost:5174
# Set to True only for development with multiple unknown origins (NOT recommended for production)
CORS_ALLOW_ALL_ORIGINS=False

# ==============================================
# Static & Media Files
# ==============================================
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# ==============================================
# JWT Authentication Settings
# ==============================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=your-jwt-secret-key

# ==============================================
# Test User Passwords (Development/Testing ONLY)
# ==============================================
# SECURITY WARNING: These should NEVER be used in production!
# Only for local development and testing environments
TEST_ADMIN_PASSWORD=admin123
TEST_MENTOR_PASSWORD=mentor123
TEST_STUDENT_PASSWORD=pass123#
TEST_FLOORWING_PASSWORD=floorwing123
TEST_USER_PASSWORD=testpass123
TEST_DEFAULT_PASSWORD=test123

# ==============================================
# Test Configuration (Development/Testing ONLY)
# ==============================================
TEST_DB_PATH=db.sqlite3
TEST_STUDENT_COUNT=10
TEST_MENTOR_COUNT=3
TEST_FLOORWING_COUNT=2
TEST_ADMIN_COUNT=1
TEST_EMAIL_DOMAIN=test.cohort.com
TEST_COHORT_NAME=Test Cohort
TEST_COHORT_BATCH=tech-f2
TEST_COHORT_START_DATE=2024-01-01

# Test Feature Flags
TEST_ENABLE_GAMIFICATION=true
TEST_ENABLE_CHAT=true
TEST_ENABLE_NOTIFICATIONS=true
TEST_ENABLE_ANALYTICS=false

# ==============================================
# Python Version
# ==============================================
PYTHON_VERSION=3.11.0

# ==============================================
# Supabase Storage (Avatar Uploads)
# ==============================================
# Copy these from: Supabase Dashboard → Project Settings → API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
# Name of the public bucket you created in Supabase Storage
SUPABASE_STORAGE_BUCKET=avatars
